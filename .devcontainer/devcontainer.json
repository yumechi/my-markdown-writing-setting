{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers-extra/features/mise:1": {}   
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "saikou9901.evilinspector",
        "enkia.tokyo-night",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "workbench.colorTheme": "Tokyo Night",
        "github.copilot.enable": {
          "markdown": true
        }
      }
    }
  }
}
