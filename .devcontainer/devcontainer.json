{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "saikou9901.evilinspector",
        "enkia.tokyo-night",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "workbench.colorTheme": "Tokyo Night",
        "github.copilot.enable": {
          "markdown": true
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post_create_install_srcript.sh"
}
